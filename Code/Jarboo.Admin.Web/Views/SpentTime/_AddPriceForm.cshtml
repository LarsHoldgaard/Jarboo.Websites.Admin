@model Jarboo.Admin.Web.Models.Time.TimeViewModel

@using (Ajax.BeginForm(MVC.SpentTime.ActionNames.AddEmployeePrice, MVC.SpentTime.Name, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "widget-grid-hours" }, new { @class = "form-inline well no-margin", @id = "form-add-employee-price" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(x => x.TaskId)
    @Html.HiddenFor(x => x.EmployeeId)
    @Html.HiddenFor(x => x.ProjectId)

    <header class="padding-bottom-5">
        <b>Add freelancing fee</b>
    </header>

    <fieldset>

        <div class="form-group">
            <label for="EmployeeId">Who did work: </label>
            @Html.DropDownListFor(x => x.EmployeeId, (SelectList)ViewBag.EmployeesList, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="Price">Price: </label>
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Add</button>

    </fieldset>
}

