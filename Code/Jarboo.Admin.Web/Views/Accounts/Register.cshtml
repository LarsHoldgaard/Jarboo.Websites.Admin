@using SmartAdminMvc
@model Jarboo.Admin.BL.Models.UserRegister

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div id="signupbox" style="margin-top: 50px" class="mainbox col-md-3 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Sign Up</div>
                    <div style="float: right; font-size: 85%; position: relative; top: -10px">
                        @Html.ActionLink("Sign In", MVC.Accounts.Login((string)ViewBag.ReturnUrl))
                    </div>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(MVC.Accounts.Register((string)ViewBag.ReturnUrl), FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false)

                        <div class="form-group">
                            @Html.LabelFor(x => x.Email, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.ConfirmEmail, "Confirm email", new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.ConfirmEmail, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Password, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                            </div>
                        </div>
                        
                        <h3>Company</h3>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Name, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Country, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Creator, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(x => x.Creator, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-success">Sign Up</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
