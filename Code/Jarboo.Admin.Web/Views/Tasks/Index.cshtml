@using Jarboo.Admin.Web.Models.Task
@model System.Collections.Generic.List<Jarboo.Admin.DAL.Entities.Task>

@{
    ViewBag.Title = "Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@(new BreadCrumbsBuilder()
    .Add("Tasks")
    .Done())

<p>
    <a class="btn btn-success" href="@Url.Action(MVC.Tasks.Create())">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add task
    </a>
</p>

@Html.Partial(MVC.Tasks.Views._List, new TasksListViewModel()
                                            {
                                                Tasks = Model,
                                                ShowProject = true
                                            })