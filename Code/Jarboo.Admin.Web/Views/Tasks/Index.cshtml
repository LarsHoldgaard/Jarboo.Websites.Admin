@using Jarboo.Admin.Web.Models.Task
@using SmartAdminMvc
@{
    ViewBag.Title = "Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- RIBBON -->
<div id="ribbon">
    @Html.Partial("_RibbonRefresh")
    <!-- breadcrumb -->
    <ol class="breadcrumb">
        @Html.RenderBreadCrumbs(this, new BreadCrumbItem("Tasks"))
    </ol>
    <!-- end breadcrumb -->
</div>
<!-- END RIBBON -->

<div id="content">
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-file-text-o"></i>
                Tasks
            </h1>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->

    @if (this.Can(MVC.Tasks.Create()))
    {
        <p>
            <a class="btn btn-success" href="@Url.Action(MVC.Tasks.Create())">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add task
            </a>
        </p>
    }
    
    @Html.Action(MVC.Tasks.List(new TasksListViewModel()
                                             {
                                                 ShowProject = true
                                             }))
</div>