@model Jarboo.Admin.Web.Models.Task.TasksListViewModel
<section id="widget-grid-question" class="">
    <!-- row -->
    <div class="row">
        <div class="col-sm-12 ">
            <!-- panel -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>
                        <span class="widget-icon"> <i class="glyphicon glyphicon-stats txt-color-darken"></i> </span>
                        Pending task
                    </h4>
                </div>
                <div class="panel-body no-padding">
                    <!-- content -->
                    <table id="Task_pending_list_estimated" class="table table-striped table-bordered table-hover dataTable no-footer " width="100%" role="grid" aria-describedby="dt_basic_info" style="width: 100%;">
                        <thead>
                            <tr role="row">
                                <th>Project</th>
                                <th>Task</th>
                                <th>Jarbo price estimate</th>
                                <th>Accept</th>
                                <th>Discuss</th>
                                <th>Close</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var task in Model.Tasks)
                            {
                                <tr role="row" class="odd">
                                    <td>@task.Project.Name</td>
                                    <td>@task.Title</td>
                                    <td>@task.EstimatedPrice</td>
                                    <td>
                                        @using (Html.BeginForm(MVC.Tasks.ActionNames.ApproveTask, MVC.Tasks.Name, new { id = task.TaskId, returnUrl = MVC.Tasks.PendingTaskView() }, FormMethod.Post, null))
                                        {
                                            @Html.AntiForgeryToken()
                                            <input type="submit" value="Approve" class="btn  btn-info" />
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Discuss", MVC.Questions.Create(task.TaskId), new { @class = "btn btn-warning" })
                                </td>
                                <td>
                                    @if (this.Can(MVC.SpentTime.Delete()))
                                    {
                                        using (Html.BeginForm(MVC.Tasks.ActionNames.Delete, MVC.Tasks.Name, new { id = task.TaskId, returnUrl = MVC.Tasks.PendingTaskView() }, FormMethod.Post, null))
                                        {
                                            @Html.AntiForgeryToken()
                                            <input type="submit" value="Close" class="btn  btn-danger delete-btn-form" />
                                        }
                                    }
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>   <!--end panel-->
        </div>
    </div>   <!--end row -->
</section>
