@model System.Collections.Generic.IEnumerable<Jarboo.Admin.DAL.Entities.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@(new BreadCrumbsBuilder()
    .Add("Customers")
    .Done())

<!--<p>
    @Html.ActionLink("Create New", "Create")
</p>-->
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var customer in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => customer.Name)
            </td>
            <td>
                @Html.ActionLink(MVC.Customers.ActionNames.View, MVC.Customers.View(customer.CustomerId))
            </td>
        </tr>
    }

</table>
