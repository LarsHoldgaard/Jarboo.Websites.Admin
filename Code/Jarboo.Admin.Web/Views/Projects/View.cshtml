@using Jarboo.Admin.Web.Models.Documentation
@using Jarboo.Admin.Web.Models.Task
@model Jarboo.Admin.DAL.Entities.Project

@{
    ViewBag.Title = "Project - " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- RIBBON -->
<div id="ribbon">
    <span class="ribbon-button-alignment">
        <span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh" rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
						<i class="fa fa-refresh"></i>
					</span>
    </span>
    <!-- breadcrumb -->
    <ol class="breadcrumb">
        @(new BreadCrumbsBuilder()
            .Add(Url.Action(MVC.Customers.Index()), "Customers")
            .Add(Url.Action(MVC.Customers.View(Model.CustomerId)), Model.Customer.Name)
            .Add(Model.Name)
            .Done())
    </ol>
    <!-- end breadcrumb -->
</div>
<!-- END RIBBON -->

<div id="content">
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-file-text-o"></i>
                Documentations
                @*<span>
                        >
                        Overview
                    </span>*@
            </h1>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
    <p class="pull-right">
        <a class="btn btn-success" href="@Url.Action(MVC.Documentations.Create(Model.ProjectId))">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add documentation
        </a>
    </p>

    @Html.Partial(MVC.Documentations.Views._List, new DocumentationsListViewModel()
                                            {
                                                Documentations = Model.Documentations,
                                                ProjectId = Model.ProjectId
                                            })
    
    <!-- col -->
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <!-- PAGE HEADER -->
            <i class="fa-fw fa fa-file-text-o"></i>
            Tasks
            @*<span>
                    >
                    Overview
                </span>*@
        </h1>

    </div>
    <p class="pull-right">
        <a class="btn btn-success" href="@Url.Action(MVC.Tasks.Create(Model.ProjectId))">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add task
        </a>
    </p>
    @Html.Partial(MVC.Tasks.Views._List, new TasksListViewModel()
                                            {
                                                Tasks = Model.Tasks.Decorate()
                                            })
    <!-- end col -->
</div>