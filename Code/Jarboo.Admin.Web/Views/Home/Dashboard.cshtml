@using Jarboo.Admin.DAL.Entities
@using SmartAdminMvc
@{
    ViewBag.Title = "Jarboo";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var spentTimes = ViewBag.SpentTimes as List<SpentTime>;
    var incomingGroupedByDate = spentTimes.GroupBy(x => x.DateCreated.Date).OrderBy(x => x.Key).Select(x => x.Aggregate(0d, (a, y) => a + y.HourlyPrice * (double)y.Hours));
    var allIncoming = incomingGroupedByDate.Sum();
}
<!-- RIBBON -->
<div id="ribbon">
    @Html.Partial("_RibbonRefresh")

    <!-- breadcrumb -->
    <ol class="breadcrumb">
        @Html.RenderBreadCrumbs(this, new BreadCrumbItem("Dashboard"))
    </ol>
    <!-- end breadcrumb -->
</div>
<!-- END RIBBON -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        </div>
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
            <ul id="sparks" class="">
                <li class="sparks-info">
                    <h5>My Income <span class="txt-color-blue">$@allIncoming</span></h5>
                    <span class="sparkline txt-color-blueLight text-center" data-sparkline-type="bar" data-sparkline-width="50px" data-sparkline-height="26px">
                        @string.Join(",", incomingGroupedByDate.Select(x => x.ToString()))
                    </span>
                </li>
            </ul>
        </div>
    </div>
    <!-- row -->
    <div class="row">
        
        <!-- NEW WIDGET START -->
        @foreach (Customer customer in ViewBag.Customers)
        {

            <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                        -->
                    <header>
                        <h2><strong>@Html.ActionLink(customer.Name, MVC.Customers.View(customer.CustomerId))</strong></h2>
                        @if (this.Can(MVC.Projects.Create()))
                        {
                            <div class="widget-toolbar">
                                <a class="btn btn-success" href="@Url.Action(MVC.Projects.Create(customer.CustomerId))">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Add Project
                                </a>
                            </div>
                        }
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            @foreach (var project in customer.Projects)
                            {
                                <div class="row">
                                    <div class="col-md-6 col-lg-12">
                                        <span>
                                            <a class="btn btn-xs btn-primary" href="@Url.Action(MVC.Projects.View(project.ProjectId))">View</a>
                                        </span>
                                        @if (this.Can(MVC.Tasks.Create()))
                                        {
                                            <span>
                                                <a class="btn btn-xs btn-primary" href="@Url.Action(MVC.Tasks.Create(project.ProjectId))">Add Task</a>
                                            </span>
                                        }
                                        <span>@project.Name</span>
                                    </div>
                                    <hr />
                                </div>
                            }
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
        }
    </div>
</div>
