@using SmartAdminMvc
@model Jarboo.Admin.Web.Models.Account.LandingVM

@{
    ViewBag.Title = "Landing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1>This is Jarbo Admin</h1>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <p>
                At the moment we only do C#/.Net/<a href="javascript:void(0)">GO updates</a>
            </p>
            <p>
                when in doubt if your project is C#/.NET, <a href="javascript:void(0)">Contact us</a>.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-md-offset-3">
            <div class="well no-padding">
                @using (Html.BeginForm(MVC.Home.Landing(), FormMethod.Post, new { @class = "smart-form client-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationBootstrap()
                
                    <header>
                        Register a free account in less than 30 sec
                    </header>

                    <fieldset>
                        <section>
                            <label class="input">
                                @Html.TextBoxFor(x => x.Email, new { @placeholder = "Email" })
                            </label>
                        </section>
                        <section>
                            <label class="input">
                                @Html.TextBoxFor(x => x.ConfirmEmail, new { @placeholder = "Repeat email" })
                            </label>
                        </section>
                        <section>
                            <label class="input">
                                @Html.TextBoxFor(x => x.Password, new { @placeholder = "Password", type="password" })
                            </label>
                        </section>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-primary">
                            Create
                        </button>
                    </footer>
                }
            </div>
            <h5 class="text-center">Already have an account?
            @Html.ActionLink("Login", MVC.Accounts.Login())
            </h5>
        </div>
    </div>
</div>
