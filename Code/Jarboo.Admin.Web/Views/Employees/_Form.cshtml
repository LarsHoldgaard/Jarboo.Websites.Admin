@using Jarboo.Admin.Web.Infrastructure
@model Jarboo.Admin.BL.Models.EmployeeEdit

@using (Html.BeginForm(MVC.Employees.Edit())) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.EmployeeId)
    
    <div class="form-horizontal">
        @Html.ValidationSummary(false)

        <div class="form-group">
            @Html.LabelFor(model => model.FullName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SkypeName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.SkypeName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TrelloId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.TrelloId, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Country, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HourlyPrice, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="input-group">
                  @Html.TextBoxFor(x => x.HourlyPrice, new { @class = "form-control" })
                  <div class="input-group-addon">USD</div>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Positions, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumListBoxFor(x => x.Positions, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}