@using Jarboo.Admin.Web.Models
@model IEnumerable<Jarboo.Admin.DAL.Entities.Employee>

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- RIBBON -->
<div id="ribbon">
    <span class="ribbon-button-alignment">
        <span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh" rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
						<i class="fa fa-refresh"></i>
					</span>
    </span>
    <!-- breadcrumb -->
    <ol class="breadcrumb">
        @(new BreadCrumbsBuilder(this)
            .Add("Employees")
            .Done())
    </ol>
    <!-- end breadcrumb -->
</div>
<!-- END RIBBON -->
<div id="content">
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-file-text-o"></i>
                Employees
                @*<span>
                        >
                        Overview
                    </span>*@
            </h1>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
    @if (this.Can(MVC.Employees.Create()))
    {
        <p>
            <a class="btn btn-success" href="@Url.Action(MVC.Employees.Create())">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add employee
            </a>
        </p>
    }

    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @*<div class="alert alert-info">
                        <strong>NOTE:</strong> All the data is loaded from a seperate JSON file
                    </div>*@
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget well" id="wid-id-0">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">


                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"
                         -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-comments"></i> </span>
                        <h2>Widget Title </h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                            <input class="form-control" type="text">
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table class="display projects-table table table-striped table-bordered table-hover dataTable no-footer" width="100%">
                                <thead>
                                    <tr>
                                        <th class="sorting_asc">
                                            @Html.DisplayNameFor(model => model.FullName)
                                        </th>
                                        <th class="sorting">
                                            @Html.DisplayNameFor(model => model.SkypeName)
                                        </th>
                                        <th class="sorting">
                                            @Html.DisplayNameFor(model => model.TrelloId)
                                        </th>
                                        <th class="sorting">
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th class="sorting">
                                            @Html.DisplayNameFor(model => model.Country)
                                        </th>
                                        <th class="sorting">
                                            @Html.DisplayNameFor(model => model.HourlyPrice)
                                        </th>
                                        <th class="sorting">
                                            @Html.DisplayNameFor(model => model.Positions)
                                        </th>
                                        @if (this.Can(MVC.Employees.Edit()))
                                        {
                                            <th></th>
                                        }
                                        @if (this.Can(MVC.Employees.Delete()))
                                        {
                                            <th></th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.ActionLink(employee.FullName, MVC.Employees.View(employee.EmployeeId))
                                            </td>
                                            <td>
                                                <a href="skype:@employee.SkypeName">@employee.SkypeName</a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => employee.TrelloId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => employee.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => employee.Country)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => employee.HourlyPrice)
                                            </td>
                                            <td>
                                                @foreach (var position in employee.Positions)
                                                {
                                                    <span class="label label-info">@position.Position</span>
                                                }
                                            </td>
                                            @if (this.Can(MVC.Employees.Edit()))
                                            {
                                                <td>
                                                    @Html.ActionLink("Edit", MVC.Employees.Edit(employee.EmployeeId))
                                                </td>
                                            }
                                            @if (this.Can(MVC.Employees.Delete()))
                                            {
                                                <td>
                                                    @Html.Partial(MVC.Shared.Views.BtnForm, BtnFormVM.Delete(x =>
                                                        {
                                                            x.Id = employee.EmployeeId;
                                                            x.Action = MVC.Employees.Delete();
                                                        }))
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- row -->
        <div class="row">
            <!-- a blank row to get started -->
            <div class="col-sm-12">
                <!-- your contents here -->
            </div>
        </div>
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
