@using Jarboo.Admin.Web.Models
@using SmartAdminMvc
@model Jarboo.Admin.Web.Models.Employee.EmployeeListViewModel

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- RIBBON -->
<div id="ribbon">
    @Html.Partial("_RibbonRefresh")

    <!-- breadcrumb -->
    <ol class="breadcrumb">
        @Html.RenderBreadCrumbs(this, new BreadCrumbItem("Employees"))
    </ol>
    <!-- end breadcrumb -->
</div>
<!-- END RIBBON -->
<div id="content">
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-file-text-o"></i>
                Employees
                @*<span>
                        >
                        Overview
                    </span>*@
            </h1>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
    @if (this.Can(MVC.Employees.Create()))
    {
        <p>
            <a class="btn btn-success" href="@Url.Action(MVC.Employees.Create())">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add employee
            </a>
        </p>
    }

    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <form class="dt-toolbar" style="float:none;overflow:hidden;" action="@Url.Action("Index")" method="get">
                    <div class="col-xs-12 col-sm-10">
                        <div class="dataTables_filter">
                            <label>
                                <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                                <input type="search" class="form-control" placeholder="" value="@Model.Query" name="query"/>
                            </label>
                            <label style="margin-left: 10px;">
                                <input type="checkbox" name="ishired" value="true" @(Model.IsHired.HasValue ? "checked=\"checked\"" : "") style="width:auto"/>
                                Only employees
                            </label>
                            <label style="margin-left: 10px;">
                                <button type="submit" class="btn btn-success">Search</button>
                            </label>
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table class="display projects-table table table-striped table-bordered table-hover dataTable no-footer" width="100%">
                                <thead>
                                    <tr>
                                        <th class="sorting_asc">
                                            @Html.DisplayNameFor(model => model.FullName)
                                        </th>
                                        <th class="sorting">
                                            @Html.DisplayNameFor(model => model.SkypeName)
                                        </th>
                                        <th class="sorting">
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th class="sorting">
                                            @Html.DisplayNameFor(model => model.Country)
                                        </th>
                                        <th class="sorting">
                                            @Html.DisplayNameFor(model => model.HourlyPrice)
                                        </th>
                                        <th class="sorting">
                                            @Html.DisplayNameFor(model => model.Positions)
                                        </th>
                                        @if (this.Can(MVC.Employees.Edit()))
                                        {
                                            <th></th>
                                        }
                                        @if (this.Can(MVC.Employees.Delete()))
                                        {
                                            <th></th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.ActionLink(employee.FullName, MVC.Employees.View(employee.EmployeeId))
                                            </td>
                                            <td>
                                                <a href="skype:@employee.SkypeName">@employee.SkypeName</a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => employee.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => employee.Country)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => employee.HourlyPrice)
                                            </td>
                                            <td>
                                                @foreach (var position in employee.Positions)
                                                {
                                                    <span class="label label-info">@position.Position</span>
                                                }
                                            </td>
                                            @if (this.Can(MVC.Employees.Edit()))
                                            {
                                                <td>
                                                    @Html.ActionLink("Edit", MVC.Employees.Edit(employee.EmployeeId))
                                                </td>
                                            }
                                            @if (this.Can(MVC.Employees.Delete()))
                                            {
                                                <td>
                                                    @Html.Partial(MVC.Shared.Views.BtnForm, BtnFormViewModel.Delete(x =>
                                                        {
                                                            x.Id = employee.EmployeeId;
                                                            x.Action = MVC.Employees.Delete();
                                                        }))
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- row -->
        <div class="row">
            <!-- a blank row to get started -->
            <div class="col-sm-12">
                <!-- your contents here -->
            </div>
        </div>
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
