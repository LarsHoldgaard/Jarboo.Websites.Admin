@using Jarboo.Admin.DAL.Entities
@using Jarboo.Admin.Web.Models.Task
@model Jarboo.Admin.DAL.Entities.Documentation

@{
    ViewBag.Title = "Documentation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@(new BreadCrumbsBuilder()
    .Add(Url.Action(MVC.Customers.Index()), "Customers")
    .Add(Url.Action(MVC.Customers.View(Model.Project.CustomerId)), Model.Project.Customer.Name)
    .Add(Url.Action(MVC.Projects.View(Model.ProjectId)), Model.Project.Name)
    .Add("Documentation")
    .Done())

<table class="table table-striped">
    <tbody>
        <tr>
            <td>
                @Html.DisplayNameFor(x => x.Type)
            </td>
            <td>
                @Html.DisplayFor(x => x.Type)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(x => x.DocumentLink)
            </td>
            <td>
                <a target="_blank" href="@Model.DocumentLink">Link <span class="glyphicon glyphicon-share" aria-hidden="true"></span></a>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <a class="btn btn-success" href="@Url.Action(MVC.Documentations.Edit(Model.DocumentationId))">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Edit
                </a>
            </td>
        </tr>
    </tbody>
</table>